<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HelpDesk Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Zgłoś Problem
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="requests">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Moje Zgłoszenia
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="account/3">
                <span class="oi oi-person" aria-hidden="true"></span> Moje konto
            </NavLink>
        </div>
        <div class="nav-item px-3" style="position: absolute; bottom: 1px" width="56px">
            <NavLink class="nav-link p-3" href="logout">
                <span class="oi oi-account-logout" aria-hidden="true"></span> Wyloguj mnie
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
